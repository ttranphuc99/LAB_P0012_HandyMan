<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>IntroductionController</servlet-name>
        <servlet-class>phuctt.controllers.IntroductionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PriceListController</servlet-name>
        <servlet-class>phuctt.controllers.PriceListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContactController</servlet-name>
        <servlet-class>phuctt.controllers.ContactController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContactMessageController</servlet-name>
        <servlet-class>phuctt.controllers.ContactMessageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReferencesController</servlet-name>
        <servlet-class>phuctt.controllers.ReferencesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReferenceMessageController</servlet-name>
        <servlet-class>phuctt.controllers.ReferenceMessageController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IntroductionController</servlet-name>
        <url-pattern>/IntroductionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PriceListController</servlet-name>
        <url-pattern>/PriceListController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContactController</servlet-name>
        <url-pattern>/ContactController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContactMessageController</servlet-name>
        <url-pattern>/ContactMessageController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReferencesController</servlet-name>
        <url-pattern>/ReferencesController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReferenceMessageController</servlet-name>
        <url-pattern>/ReferenceMessageController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>IntroductionController</welcome-file>
    </welcome-file-list>
</web-app>
